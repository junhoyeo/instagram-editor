{
  "name": "instagram-editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:api": "jest",
    "eject": "react-scripts eject",
    "deploy": "yarn build && gh-pages -d build"
  },
  "homepage": "https://junhoyeo.github.io/instagram-editor",
  "dependencies": {
    "axios": "^0.21.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.3",
    "react-modal": "^3.11.2",
    "react-palette": "^1.0.2",
    "react-scripts": "3.4.3",
    "recoil": "^0.1.2",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/react-modal": "^3.10.6",
    "@types/styled-components": "^5.1.4",
    "gh-pages": "^3.1.0",
    "jest-extended": "^0.11.5",
    "ts-jest": "^26.4.3",
    "typescript": "~4.0.5"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts?$": "ts-jest",
      "\\.js?$": "babel-jest"
    },
    "testRegex": "(\\.|/)(test|spec)\\.(jsx?|tsx?)$",
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true
      }
    },
    "testEnvironment": "node"
  }
}
